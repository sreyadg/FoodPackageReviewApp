<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.Hersheys">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/current_event_button"
        android:layout_marginBottom="450dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/current_events_button"
        android:onClick="bizopp"/>


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/nestle_chocolate"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="75dp"
        android:src="@drawable/hershey_s_cookies_n_creme"
        android:clickable="true"
        android:onClick="hershey_chocolate"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:id="@+id/lower_banner"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lower_banner"
        android:onClick="bizopp"/>


</RelativeLayout>
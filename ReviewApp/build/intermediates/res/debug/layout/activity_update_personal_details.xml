<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.UpdatePersonalDetails"
    android:id="@+id/update_personal__details_form">

    <EditText
        android:id="@+id/updated_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nfn"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/updated_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nln"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/updated_first_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/updated_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_e"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/updated_last_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/updated_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/n_dob"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/updated_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/update_button"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Update"
        android:textStyle="bold"
        android:clickable="true"
        android:contentDescription="Update"
        android:onClick="updateUser"/>



</RelativeLayout><!-- From: file:/C:/Users/User/Documents/CZ2006/ReviewApp2/app/src/main/res/layout/activity_update_personal_details.xml -->
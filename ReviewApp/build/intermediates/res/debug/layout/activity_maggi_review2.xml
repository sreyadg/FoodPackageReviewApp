<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.MaggiReview2">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smell"
        android:layout_marginBottom="166dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Smell"
        android:id="@+id/textView"
        android:layout_above="@+id/smell" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/maggi_new"
        android:src="@drawable/maggi_mast_masala"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maggi Noodles"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/maggi_new"
        android:layout_alignEnd="@+id/admin_banner"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_banner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/current_events_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comments"
        android:id="@+id/textView3"
        android:layout_marginTop="61dp"
        android:layout_alignTop="@+id/smell"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/reviewComments"
        android:hint="Add Comments Here"
        android:layout_above="@+id/update_button"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/add_review_button"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Review"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="addReview2"
        android:contentDescription="Update"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/reviewComments" />

</RelativeLayout>

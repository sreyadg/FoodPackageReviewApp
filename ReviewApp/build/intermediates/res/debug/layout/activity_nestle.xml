<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.Nestle">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/current_event_button"
        android:layout_marginBottom="450dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/current_events_button"
        android:onClick="bizopp"/>


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:id="@+id/nestle_chocolate"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/nestlechoc"
        android:clickable="true"
        android:onClick="nestle_chocolate"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:id="@+id/nestle_cereal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/nestle_cereals"
        android:clickable="true"
        android:onClick="nestle_cereal"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:id="@+id/lower_banner"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lower_banner"
        android:onClick="bizopp"/>

</RelativeLayout><!-- From: file:/C:/Users/User/Documents/CZ2006/ReviewApp2/app/src/main/res/layout/activity_nestle.xml -->
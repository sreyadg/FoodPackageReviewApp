<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.MaggiReview1"
    android:id="@+id/maggi_review_1">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taste"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/packaging"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Taste"
        android:id="@+id/textView"
        android:layout_above="@+id/taste" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/maggi_new"
        android:src="@drawable/maggi_mast_masala"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maggi Noodles"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/maggi_new"
        android:layout_alignEnd="@+id/admin_banner"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_banner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/current_events_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Packaging"
        android:id="@+id/textView3"
        android:layout_above="@+id/packaging"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/packaging"
        android:layout_above="@+id/go_to_page_2"
        android:layout_alignStart="@+id/smell" />

    <Button
        android:id="@+id/go_to_page_2"
        style="?android:textAppearanceMedium"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Next Page"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="addReview"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

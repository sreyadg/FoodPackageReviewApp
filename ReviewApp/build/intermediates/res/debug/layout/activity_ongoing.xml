<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.OngoingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/current_event_button"
        android:layout_marginBottom="450dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/current_events_button"
        android:onClick="bizopp"/>


    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/nestle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="45dp"
        android:src="@drawable/nestle"
        android:clickable="true"
        android:onClick="nestle"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/hersheys"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="45dp"
        android:src="@drawable/hershey_logo"
        android:clickable="true"
        android:onClick="hershey"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:id="@+id/lower_banner"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lower_banner"
        android:onClick="bizopp"/>

</RelativeLayout>

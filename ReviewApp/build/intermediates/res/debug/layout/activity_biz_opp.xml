<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.BizOpp">

    <EditText
        android:id="@+id/bizopp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:hint="@string/bizopp_name"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/bizopp_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bizopp_company"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/bizopp_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/bizopp_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bizopp_phone"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/bizopp_company"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/bizopp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bizopp_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/bizopp_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bizopp_button"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:text="@string/bizopp"
        android:textStyle="bold"
        android:clickable="true"
        android:contentDescription="@string/bizopp"
        android:onClick="newBizOpp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/business_opportunities" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/logo3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo" />

</RelativeLayout>

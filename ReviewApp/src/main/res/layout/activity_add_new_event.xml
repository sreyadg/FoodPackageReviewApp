<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lipssmackingparadise.reviewapp.viewcontroller.AddNewEvent"
    android:id="@+id/add_new_event_page">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maggi_new"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/add_new_event_banner" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_company"
        android:layout_below="@+id/maggi_new"
        android:layout_marginTop="41dp"
        android:layout_alignParentStart="true"
        android:hint="Company Name"
        android:layout_alignEnd="@+id/maggi_new" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        android:layout_below="@+id/product_company"
        android:hint="Product Name"
        android:layout_marginTop="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_description"
        android:layout_centerVertical="true"
        android:hint="Product Description"
        android:layout_alignEnd="@+id/product_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/event_start"
        android:hint="Start Date"
        android:layout_above="@+id/logo"
        android:layout_alignEnd="@+id/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="to"
        android:id="@+id/to"
        android:layout_marginLeft="150dp"
        android:layout_alignBottom="@+id/event_start"
        android:layout_alignTop="@+id/event_start" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/event_end"
        android:hint="End Date"
        android:layout_alignTop="@+id/to"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event!"
        android:id="@+id/add_event_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/event_end"
        android:layout_marginBottom="31dp"
        android:onClick="create_event"/>

</RelativeLayout>

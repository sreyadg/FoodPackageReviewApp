<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lipssmackingparadise.reviewapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".viewcontroller.SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".viewcontroller.SuccessNewUser"
            android:label="@string/title_activity_success_new_user"
            android:parentActivityName=".viewcontroller.SignUp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lipssmackingparadise.reviewapp.viewcontroller.SignUp" />
        </activity>
        <activity
            android:name=".viewcontroller.BizOpp"
            android:label="@string/title_activity_biz_opp" >
        </activity>
        <activity
            android:name=".viewcontroller.OngoingActivity"
            android:label="@string/title_activity_ongoing" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".viewcontroller.PastActivity"
            android:label="@string/title_activity_past" >
        </activity>
        <activity
            android:name=".viewcontroller.UpcomingActivity"
            android:label="@string/title_activity_upcoming" >
        </activity>
        <activity
            android:name=".viewcontroller.ForgotLoginDetails"
            android:label="@string/title_activity_forgot_login_details" >
        </activity>
        <activity
            android:name=".viewcontroller.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".viewcontroller.UserDashboard"
            android:label="@string/title_activity_user_dashboard" >
        </activity>
        <activity
            android:name=".viewcontroller.Nestle"
            android:label="@string/title_activity_nestle" >
        </activity>
        <activity
            android:name=".viewcontroller.Hersheys"
            android:label="@string/title_activity_hersheys" >
        </activity>
        <activity
            android:name=".viewcontroller.NestleChocolateReview"
            android:label="@string/title_activity_nestle_chocolate_review" >
        </activity>
        <activity
            android:name=".viewcontroller.NestleCerealReview"
            android:label="@string/title_activity_nestle_cereal_review" >
        </activity>
        <activity
            android:name=".viewcontroller.HersheysChocolateReview"
            android:label="@string/title_activity_hersheys_chocolate_review" >
        </activity>
        <activity
            android:name=".viewcontroller.HersheysChocolateReview2"
            android:label="@string/title_activity_hersheys_chocolate_review2" >
        </activity>
        <activity
            android:name=".viewcontroller.NestleCerealReview2"
            android:label="@string/title_activity_nestle_cereal_review2" >
        </activity>
        <activity
            android:name=".viewcontroller.UpdateDetails"
            android:label="@string/title_activity_update_details"
            android:parentActivityName=".viewcontroller.UserDashboard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lipssmackingparadise.reviewapp.viewcontroller.UserDashboard" />
        </activity>
        <activity
            android:name=".viewcontroller.UpdatePersonalDetails"
            android:label="@string/title_activity_update_personal_details" >
        </activity>
        <activity
            android:name=".viewcontroller.UpdateUsernamePassword"
            android:label="@string/title_activity_update_username_password" >
        </activity>
        <activity
            android:name=".viewcontroller.AuthenticateUser"
            android:label="@string/title_activity_authenticate_user"
            android:parentActivityName=".viewcontroller.Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lipssmackingparadise.reviewapp.viewcontroller.Login" />
        </activity>
        <activity
            android:name=".viewcontroller.AdminAccess"
            android:label="@string/title_activity_admin_access" >
        </activity>
        <activity
            android:name=".viewcontroller.AddNewEvent"
            android:label="@string/title_activity_add_new_event" >
        </activity>
        <activity
            android:name=".viewcontroller.GenerateReport"
            android:label="@string/title_activity_generate_report" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
